<Window x:Class="PL.creditinfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Credit Card registration" Height="316.406" Width="600.781" WindowStyle="SingleBorderWindow">
    <Grid>
        <DockPanel>
            <Grid DockPanel.Dock="Top" Height="87">
                <TextBlock HorizontalAlignment="Left" Margin="56,27,0,0" Text="Credit Card Number" VerticalAlignment="Top" Height="25" Width="180" TextAlignment="Center" FontWeight="Bold" FontSize="16"/>
                <TextBox x:Name="info" Height="25" Margin="241,27,43,35" />
            </Grid>
            <StackPanel DockPanel.Dock="Top" Height="40" VerticalAlignment="Center">
                <Button x:Name="addCreditCardInfo" Content="Buy" Click="addInfo_Click" FontSize="16" Height="26" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </StackPanel>
            <StackPanel DockPanel.Dock="Top" Height="40" VerticalAlignment="Center">
                <Button x:Name="saveInfo" Content="use saved credit card number" Click="exsisting_info_load_Click" FontSize="16" Height="26" Width="250" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </StackPanel>
            <TextBox x:Name="shoppingList"   Width="317" Height="130" />

        </DockPanel>

    </Grid>
</Window>
