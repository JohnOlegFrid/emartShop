<Window x:Class="PL.ProgressBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Please wait..." Height="203.632" Width="430.684"
        ContentRendered="Window_ContentRendered">

    <Grid Margin="10,21,2,18">
        <ProgressBar Minimum="0" Maximum="100" Value="0" Name="pbStatus" Margin="0,0,0,51" Height="44" VerticalAlignment="Bottom" />
        <TextBlock Text="{Binding ElementName=pbStatus, Path=Value, StringFormat={}{0:0}%}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="175,49,177,61" Height="24" Width="59" TextAlignment="Center" />
        <TextBlock HorizontalAlignment="Left" Height="26" Margin="95,0,0,100" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="228" FontSize="18" TextAlignment="Center"><Run Text="Loading ..."/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/></TextBlock>
        <Button Content="OK" Height="27" Click="OK_Click" FontSize="14" Margin="150,97,153,0" VerticalAlignment="Top" Foreground="Black" BorderBrush="#FF7EE2EC" Background="White"/>
    </Grid>
</Window>

