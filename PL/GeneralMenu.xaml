<Window x:Class="PL.GeneralMenu"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GeneralMenu" Height="400" Width="800">
    <Grid>


        <DockPanel LastChildFill="False">
            <Border BorderBrush="#FF00B9FF" DockPanel.Dock="Left"  BorderThickness="1" >
                <StackPanel DockPanel.Dock="Left" Width="200" >
                    <Image Source="emart.png" Margin="0,0,0,20"/>
                    <Button Content="Employee"   Background="White" BorderBrush="#FF00B9FF" Margin="5" Click="employeeClick"  />
                    <Button Content="Products"  Background="White" BorderBrush="#FF00B9FF" Margin="5" />
                    <Button Content="Transaction"  Background="White" BorderBrush="#FF00B9FF" Margin="5" />
                    <Button Content="Customers"  Background="White" BorderBrush="#FF00B9FF" Margin="5" />
                    <Button Content="Departments"  Background="White" BorderBrush="#FF00B9FF" Margin="5" />
                    <Button Content="Users" Background="White" BorderBrush="#FF00B9FF" Margin="5" />
                </StackPanel>
            </Border>
            <StackPanel Name="generalMenuPanel" DockPanel.Dock="Top" HorizontalAlignment="Stretch">


            </StackPanel>
        </DockPanel>
    </Grid>

</Window>